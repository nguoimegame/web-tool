---
import EncodingPage from '../../components/EncodingPage.astro';
import { useTranslations } from '../../i18n/utils';

const t = useTranslations('en');
const title = t('hex_decode.title');
const description = t('hex_decode.description');
const toolName = t('decode');
const jsFile = "hex.js?v=6";
const extraJsFile = "encoding.js?v=8";
const activePage = "encoding/hex_decode";
const reverseLink = "encoding/hex_encode";
const initScript = `
    window.method = hexDecode;
    methodLoad();
`;
---
<EncodingPage 
    title={title}
    description={description}
    toolName={toolName}
    jsFile={jsFile}
    extraJsFile={extraJsFile}
    activePage={activePage}
    reverseLink={reverseLink}
    hasInputSettings={false}
    hasOutputSettings={true}
    hasFormatSettings={false}
    initScript={initScript}
    outputDataType=""
/>
