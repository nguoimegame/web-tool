---
import HashPage from '../../../components/HashPage.astro';
import { languages } from '../../../i18n/ui';
import { useTranslations } from '../../../i18n/utils';

export function getStaticPaths() {
  return Object.keys(languages).map((lang) => {
      return { params: { lang } };
  });
}

const { lang = 'en' } = Astro.params;
const t = useTranslations(lang as any);

const title = t('sha224.title');
const description = t('sha224.description');
const algorithmName = "sha224";
const jsFile = "https://cdnjs.cloudflare.com/ajax/libs/js-sha256/0.11.0/sha256.min.js";
const activePage = "hash/sha224";
---

<HashPage 
  title={title}
  description={description}
  algorithmName={algorithmName}
  jsFile={jsFile}
  activePage={activePage}
/>
