---
import FileHashPage from '../../../components/FileHashPage.astro';
import { languages } from '../../../i18n/ui';
import { useTranslations } from '../../../i18n/utils';

export function getStaticPaths() {
  return Object.keys(languages).map((lang) => {
    return { params: { lang } };
  });
}

const { lang = 'en' } = Astro.params;
const t = useTranslations(lang as any);

const title = t('sha512_224_file_hash.title');
const description = t('sha512_224_file_hash.description');
const algorithmName = 'sha512_224';
const jsFile = 'https://cdnjs.cloudflare.com/ajax/libs/js-sha512/0.9.0/sha512.min.js';
const activePage = 'hash/sha512_224_file_hash';
const methodWrapper = 'window.sha512.sha512_224';
---

<FileHashPage
  title={title}
  description={description}
  algorithmName={algorithmName}
  jsFile={jsFile}
  activePage={activePage}
  methodWrapper={methodWrapper}
/>
